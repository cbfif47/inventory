<h1>All Transactions</h1>
 
<table>
  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Item</th>
    <th>Action</th>
    <th>Change</th>
    <th>Loc1</th>
    <th>Loc2</th>
  </tr>
 
  <% @transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.id %></td>
      <td><%= transaction.date %></td>
      <td><%= transaction.item.name %></td>
      <td><%= transaction.action.action %></td>
      <td><%= transaction.net %></td>
      <td><%= @locations.find(transaction.loc1).name %></td>
      <td><%= @locations.find(transaction.loc2).name %></td>
      <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
      <td><%= link_to 'Destroy', transaction_path(transaction), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Add New Transaction', new_transaction_path %>
<%= link_to 'Back Home', root_path %>

<%= form_for @preroll do |f| %>
  
  <p>   
    <%= f.label "Date" %>
    <%= f.date_select(:date) %>
    <%= f.label "Action" %>
    <%= f.collection_select(:action_id, Action.all, :id, :action) %>
    <%= f.label "Location1" %>
    <%= f.collection_select(:loc1, Location.all, :id, :name) %>
    <%= f.label "Location2" %>
    <%= f.collection_select(:loc2, Location.all, :id, :name) %><br>
<br>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>