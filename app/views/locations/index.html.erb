<h1>All Locations</h1>
 
<table>
  <tr>
    <th>ID</th>
    <th>Location</th>
    <th>Avaliable Y/N</th>
    <th>Active Y/N</th>
  </tr>
 
  <% @locations.each do |location| %>
    <tr>
      <td><%= location.id %></td>
      <td><%= location.name %></td>
      <td><%= location.available %></td>
      <td><%= location.active %></td>
      <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <!--  <td><%= link_to 'Destroy', location_path(location), method: :delete, data: {confirm: 'Are you sure?'} %></td>    dont wanna destroy--!> 
    </tr>
  <% end %>
</table>
