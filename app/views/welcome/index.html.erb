<h1>Welcome to MrchBox</h1>

<%= setup_links(@items, "Items", new_item_path) %>
<%= setup_links(@locations, "Locations", new_location_path) %>
<%= setup_links(@tours, "a Tour", new_tour_path) %>

<% if @setup %>
  <% if @outstanding.present? %>
      <%= "Show in progress at #{@latest.venue}!" %><br>
      <%= showtime_link(@latest,"View") %>
      <%= link_to 'Comp an Item', new_transaction_path(show:@latest.id, type:5), class: 'btn btn-default' %>
      <%= link_to "Transfer to #{@primary.name}", new_transaction_path(show:@latest.id, type:3), class: 'btn btn-default' %>
<%= link_to 'Count Out', new_show_count_path(@latest, direction:"out"), :class=> 'btn btn-default'  %>
    <% else %>
      <%= showtime_link(@latest,"Latest") %>
      <%= showtime_link(@next,"Next") %>
      <%= link_to "All Shows", shows_path, :class=> 'btn btn-default' %>    
<div class="btn-group">
   <button type="button" class="btn btn-default dropdown-toggle" 
      data-toggle="dropdown">
      Do Stuff <span class="caret"></span>
   </button>
   <ul class="dropdown-menu" role="menu">
     <li><%= link_to 'Add To Inventory', new_transaction_path(type:2) %></li>
      <li><%= link_to 'Non-Show Sale', new_transaction_path(type:1) %></li>
     <li><%= link_to 'Non-Show Comp', new_transaction_path(type:5) %></li>
     <li><%= link_to 'Transfer Stuff', new_transaction_path(type:3) %></li>
   </ul>
</div>
    <% end %>
<% end %>
