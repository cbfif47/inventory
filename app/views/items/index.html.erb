<h1>All Items</h1>
 
<table class="u-full-width">
  <thead>
  <tr>
    <th>Name</th>
    <th>Size/Media</th>
    <th>Active</th>
    <th></th>    
  </tr>
 </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.sub %></td>
      <td><%= check_box_tag 'active', '1', item.active, :disabled => true %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>

    </tr>
  <% end %>
    </tbody>
</table>
<%= link_to 'Add New Item', new_item_path %>
