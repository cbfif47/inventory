<%= form_for @item do |f| %>
  <% if @item.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@item.errors.count, "error") %> prohibited
      this item from being saved:</h2>
    <ul>
    <% @item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.text_field :name, :placeholder => 'Name'%><br>
    <%= f.text_field :sub, :placeholder => 'Size/Media' %><br>
    <%= f.number_field :rate, :placeholder => '$' %><br>
    <%= f.label :soft %>
    <%= f.check_box :soft %>
    <%= f.label :active %>
    <%= f.check_box :active, checked: true %>
  </p>

 
  <p>
    <%= f.submit "Add to my box"%>
  </p>
<% end %>