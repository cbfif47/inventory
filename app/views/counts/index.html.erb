<h1>Listing counts</h1>

<table class="u-full-width">
  <thead>
    <tr>
      <th>Show</th>
      <th>Item</th>
      <th>In</th>
      <th>Out</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counts.each do |count| %>
      <tr>
        <td><%= count.show.date %></td>
        <td><%= count.item.name_with_sub %></td>
        <td><%= count.in %></td>
        <td><%= count.out %></td>
        <td><%= link_to 'Show', count %></td>
        <td><%= link_to 'Edit', edit_count_path(count) %></td>
        <td><%= link_to 'Destroy', count, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

