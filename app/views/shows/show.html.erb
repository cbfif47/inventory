<h2><%= @show.date.strftime("%e %b") %> - <%= @show.venue %></h2>
<h3><%= @show.city %>  <%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe, edit_show_path(@show) %></h3>
<h4><%= link_to "#{@show.tour.name} Tour", tour_path(@show.tour) %> - <%= show_guests %></h4>
<%= show_count %>
<% if @islatest && @needouts.present? %>
<div class="btn-group">
   <button type="button" class="btn btn-primary dropdown-toggle" 
      data-toggle="dropdown">
      Do Stuff <span class="caret"></span>
   </button>
   <ul class="dropdown-menu" role="menu">
      <li><%= link_to 'Comp Item', new_transaction_path(show:@show.id,type:5) %></li>
     <li><%= link_to "Transfer to #{@primary.name}", new_transaction_path(show:@show.id,type:3) %></li>
     <% if @needins.present? %>
     <li class="divider"></li><li><%=link_to 'Count In More Stuff', show_new_count_path(@show, direction:"in") %></li>
     <% end %>
   </ul>
</div>  
<% end %>
<%= show_notes %>
<br><br>
  
<% if @countins.present? %>
<div class="table-responsive">
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Item</th>
      <th>In</th>
      <th>Added</th>
      <th>Comps</th>
      <th>Out</th>
      <th>Price</th>
      <th>Sales</th>
      <th>Gross</th>
    </tr>
  </thead>

  <tbody>
    <% total = 0 %>
    <% @countins.each do |count| %>
      <tr>        
        <td><%= count.item.name_with_sub %></td>path
        <td><%= i = count.quantity %>
            <% if !count.find_out && @islatest %>
          <%= link_to '<span class="glyphicon glyphicon-remove danger"></span>'.html_safe, show_count_path(@show,count), method: :delete, class: 'alert-danger', data: { confirm: "Are you sure you want to re-count in #{count.item.name_with_sub}?" } %>
            <% end %>
        </td>
        <td><%= t = count.item.find_transfers(@show) > 0 ? count.item.find_transfers(@show) : "-" %></td>
        <td><%= c = count.item.find_comps(@show) > 0 ? count.item.find_comps(@show) : "-" %></td>
        <td><%= o = count.find_out ? count.find_out.quantity : "-" %>
            <% if count.find_out && @islatest %>
          <%= link_to '<span class="glyphicon glyphicon-repeat"></span>'.html_safe, show_count_path(@show,count.find_out), method: :delete, data: { confirm: "Are you sure you want to re-count out #{count.item.name_with_sub}?" } %>
            <% end %></td>
        <td>$<%= r = count.rate %></td>
        <% if o.is_a? Integer %>
        <td><%= s = (i - o.to_i - c.to_i + t.to_i) %></td>
        <td>$<%= cash = s*r %></td>
        <% else %>
        <td>-</td>
        <td>-</td>
        <% end %>
        <% @total += cash.to_i %>
        <% if count.item.soft %>        
        <% @stots += cash.to_i %>
        <% else %>
        <% @stots %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<% if @needouts.blank? %>
<h3>Soft: $<%= @stots %></h3>
<h3>Total: $<%= @total %></h3>
<% end %>
<% end %>
<br>
