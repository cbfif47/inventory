<h1>Showtime</h1>
<%= @show.date %> at <%= @show.venue %><br>
<% if @islatest %>
  <% if @needins.blank? %>
  <%= link_to 'Count In', '#', :class=> 'btn btn-primary', data: { confirm: "No more items to count in!" } %>
  <% else %>
  <%= link_to 'Count In', count_in_out_path(@show, direction:"in"), :class=> 'btn btn-primary' %>
  <% end %>
  <% if @needouts.blank? %>
  <%= link_to 'Count Out', '#',   :class=> 'btn btn-primary', data: { confirm: "No items to count out!"} %>
  <% else %>
  <%= link_to 'Count Out', count_in_out_path(@show, direction:"out"), :class=> 'btn btn-primary'  %>
  <%= link_to 'Comp Item', new_transaction_path(show:@show.id,type:5), class: 'btn btn-primary' %>
  <% end %>
<% end %>
<table class="u-full-width">
  <thead>
    <tr>
      <th>Item</th>
      <th>In</th>
      <th>Added</th>
      <th>Comps</th>
      <th>Out</th>
      <th>Price</th>
      <th>Sales</th>
      <th>Gross</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% total = 0 %>
    <% @countins.each do |count| %>
      <tr>        
        <td><%= count.item.name_with_sub %></td>
        <td><%= i = count.quantity %>
            <% if !count.find_out && @islatest %>
            <%= link_to 'X', count, method: :delete, class: 'button button-redo', data: { confirm: 'Are you sure?' } %>
            <% end %>
        </td>
        <td><%= t = count.item.find_transfers(@show) > 0 ? count.item.find_transfers(@show) : "-" %></td>
        <td><%= c = count.item.find_comps(@show) > 0 ? count.item.find_comps(@show) : "-" %></td>
        <td><%= o = count.find_out ? count.find_out.quantity : "-" %>
            <% if count.find_out && @islatest %>
            <%= link_to 'X', count.find_out, method: :delete, class: 'button button-redo', data: { confirm: 'Are you sure?' } %>
            <% end %></td>
        <td>$<%= r = count.rate %></td>
        <% if o.is_a? Integer %>
        <td><%= s = (i - o.to_i - c.to_i + t.to_i) %></td>
        <td>$<%= cash = s*r %></td>
        <% else %>
        <td>-</td>
        <td>-</td>
        <% end %>
        <% total += cash.to_i %>
        <% @stots = 0 %>
        <% if count.item.soft %>        
        <% @stots += cash.to_i %>
        <% end %>
      </tr>
    <% end %>
    <tr><td></td><td></td><td></td><td></td><td></td><td>Soft</td><td>$<%= @stots %></td></tr>
    <tr><td></td><td></td><td></td><td></td><td></td><td>Total</td><td>$<%= total %></td></tr>
  </tbody>
</table>

<br>
